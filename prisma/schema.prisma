generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model FitnessReport {
  fitnessReportId    String         @id
  fitnessReportName  String
  fitnessReportDate  String
  fitnessReportTrainer String
  fitnessReportClient String
  trainingPlans      TrainingPlan[]
}

model TrainingPlan {
  trainingPlanId                 Int            @id @default(autoincrement())
  trainingPlanWorkout            String
  trainingPlanSets               Int
  trainingPlanReps               Int
  trainingPlanWeight             Int
  fitnessReportId    String
  fitnessReport      FitnessReport  @relation(fields: [fitnessReportId], references: [fitnessReportId])
}
